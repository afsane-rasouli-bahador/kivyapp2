MDScreen:
    name : 'pre-splash'
    MDFloatLayout:
        md_bg_color : 226/255, 0, 48/255, 1
        Image:
            source: 'asserts/logo.png'
            size_hint: .26, .26
            pos_hint: {'center_x': .5, 'center_y': .55}
            canvas.before:
                Color:
                    rgb: 1, 1, 1, 1
                Ellipse:
                    size: 200, 200
                    pos: 250, 550

    MDLabel:
        text: 'Todo List'
        pos_hint: {'center_x': .5, 'center_y': .2}
        halign: 'center'
        theme_text_color: 'Custom'
        text_color: 1, 1, 1, 1
        font_size: '60sp'
        font_name: 'fonts/FeelfreePersonalUseRegular-lg2Bw.ttf'
    MDLabel:
        text: 'To Do gives you focus, from work to play.'
        pos_hint: {'center_x': .5, 'center_y': .1}
        halign: 'center'
        theme_text_color: 'Custom'
        text_color: 1, 1, 1, 1
        font_size: '13sp'
        font_name: 'fonts/Poppins-Regular.ttf'
        