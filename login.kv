MDScreen:
    name : 'login'
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        MDIconButton:
            icon: 'chevron-left'
            user_font_size: '35sp'
            pos_hint: {'center_y': .95}
            on_release: app.on_start()
        MDLabel:
            text: 'Back'
            font_size: '18sp'
            font_name: 'fonts/Poppins-Regular.ttf'
            pos_hint: {'center_x': .615, 'center_y': .949}
        Image:
            source: 'asserts/logo.png'
            size_hint: .26, .26
            pos_hint: {'center_x': .22, 'center_y': .8}
        MDLabel:
            text: "Doesn't have an account yet?"
            font_size: '12sp'
            font_name: 'fonts/Poppins-Medium.ttf'
            color: 120/255, 120/255, 120/255, 1
            pos_hint: {'center_x': .615, 'center_y': .65}

        MDTextButton:
            text: 'Sign Up'
            font_size: '13sp'
            pos_hint: {'center_x': .73, 'center_y': .65}
            halign: 'center'
            color: 226/255, 0, 48/255, 1
            on_release: app.show_signup()


        MDLabel:
            text: 'Login'
            font_size: '28sp'
            font_name: 'fonts/Poppins-SemiBold.ttf'
            pos_hint: {'center_x': .615, 'center_y': .58}


        MDFloatLayout:
            size_hint: .79, .08
            pos_hint: {'center_x': .5, 'center_y': .42}
            MDLabel:
                text: 'Username'
                font_size: '14sp'
                font_name: 'fonts/Poppins-Medium.ttf'
                pos_hint: {'center_x': .5, 'center_y': .9}
            TextInput:
                id: login_username
                size_hint_y: .75
                font_name: 'fonts/Poppins-Regular.ttf'
                pos_hint: {'center_x': .49, 'center_y': .4}
                background_color: 0, 0, 0, 0
                cursor_color: 0, 0, 0, 1
                cursor_width: '2sp'
                foreground_color: 120/255, 120/255, 120/255, 1
                font_size:'17sp'
                multiline: False

            Image:
                source: 'asserts/user.png'
                pos_hint: {'center_x': .96, 'center_y': .5}
                size_hint: .5, .5
            MDFloatLayout:
                pos_hint: {'center_x': .5, 'center_y': .0}
                size_hint_y: .03
                md_bg_color: 120/255, 120/255, 120/255, 1


            
        MDFloatLayout:
            size_hint: .79, .08
            pos_hint: {'center_x': .5, 'center_y': .28}
            MDLabel:
                text: 'Password'
                font_size: '14sp'
                font_name: 'fonts/Poppins-Medium.ttf'
                pos_hint: {'center_x': .5, 'center_y': .9}
            TextInput:
                id: login_password
                size_hint_y: .75
                font_name: 'fonts/Poppins-Regular.ttf'
                pos_hint: {'center_x': .49, 'center_y': .4}
                background_color: 0, 0, 0, 0
                cursor_color: 0, 0, 0, 1
                cursor_width: '2sp'
                foreground_color: 120/255, 120/255, 120/255, 1
                font_size:'17sp'
                multiline: False
                password: True
            Image:
                source: 'asserts/password.png'
                pos_hint: {'center_x': .96, 'center_y': .5}
                size_hint: .4, .4
            MDFloatLayout:
                pos_hint: {'center_x': .5, 'center_y': .0}
                size_hint_y: .03
                md_bg_color: 120/255, 120/255, 120/255, 1
        Button:
            text: 'Login'
            background_color: 0, 0, 0, 0
            font_name: 'fonts/Poppins-Medium.ttf'
            size_hint: .79, .08
            pos_hint: {'center_x': .5, 'center_y': .15}
            on_release: app.login(root.ids.login_username.text, root.ids.login_password.text)

            canvas.before:
                Color:
                    rgb: 226/255, 0, 48/255, 1
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius:[2]
        MDTextButton:
            text: 'Forget Password?'
            font_size: '13sp'
            pos_hint: {'center_x': .5, 'center_y': .07}
            halign: 'center'
            color: 120/255, 120/255, 120/255, 1
            on_release: app.show_forgetpass()
